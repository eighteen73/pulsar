{
  "name": "pulsar",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run development",
    "development": "TAILWIND_MODE=build mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:php",
    "lint:css": "stylelint './resources/css/**/*.css'",
    "lint:js": "eslint './resources/js/**/*.js'",
    "lint:php": "./vendor/bin/phpcs .",
    "i18n": "npm run i18n:textdomain && npm run i18n:pot",
    "i18n:textdomain": "npx node-wp-i18n addtextdomain --exclude=vendor,node_modules",
    "i18n:pot": "npx node-wp-i18n makepot"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@wordpress/babel-preset-default": "^6.9.0",
    "@wordpress/browserslist-config": "^4.1.2",
    "@wordpress/eslint-plugin": "^12.1.0",
    "@wordpress/prettier-config": "^1.2.0",
    "@wordpress/stylelint-config": "^20.0.2",
    "browser-sync": "^2.27.9",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "fast-glob": "^3.2.11",
    "laravel-mix": "^6.0.43",
    "laravel-mix-clean": "^0.1.0",
    "laravel-mix-copy-watched": "^2.3.1",
    "postcss-import": "^14.1.0"
  },
  "dependencies": {
    "alpinejs": "^3.9.5",
    "tailwindcss": "^3.0.23"
  },
  "babel": {
    "presets": [
      "@wordpress/babel-preset-default"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "tailwindcss/nesting": {},
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "prettier": "@wordpress/prettier-config",
  "stylelint": {
    "extends": "@wordpress/stylelint-config"
  }
}
