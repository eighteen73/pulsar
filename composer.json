{
  "name": "eighteen73/pulsar",
  "type": "wordpress-theme",
  "license": "MIT",
  "authors": [
    {
      "name": "Brett Mason",
      "email": "brett@orphans.co.uk"
    }
  ],
  "minimum-stability": "dev",
  "require-dev": {
    "php": ">=7.4",
    "wp-coding-standards/wpcs": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/php-compatibility": "*",
    "eighteen73/phpcs-composer": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "Pulsar\\": "includes/classes/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "config-cs": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
      "\"vendor/bin/phpcs\" --config-set default_standard Eighteen73-WordPress-Default"
    ],
    "post-install-cmd": "@config-cs",
    "post-update-cmd": "@config-cs",
    "lint": "\"vendor/bin/phpcs\" . "
  }
}
